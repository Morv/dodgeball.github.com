<div id="call-to-action" class="section hr">
  <h2>Second Annual</h2>
  <h1>octocat<br/>dodgeball<br/>invitational</h1>
  <h2>Sunday, November 11th at 1:00pm</h2>
  <div id="the-pot">
    <span class="shine"></span>
    <h3 class="title">The Pot</h3>
    <h3 class="ammount">$<span id="ammount">72,000</span></h3>
  </div>
</div><!-- #header-wrapper -->

